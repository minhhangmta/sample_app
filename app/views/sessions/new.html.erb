<% provide :title, t("login_text") %>
<h1><%= t "login_text" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to t(".forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_text" %></span>
      <% end %>

      <%= f.submit t("login_text"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t ".new_user" %><%= link_to t("signup_now"), signup_path %></p>
  </div>
</div>
